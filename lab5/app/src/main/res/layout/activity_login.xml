<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="none.sbaixas.laboratorio5.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/password_text_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="222dp"
            android:ems="10"
            android:inputType="textPassword"
            tools:layout_editor_absoluteX="85dp"
            tools:layout_editor_absoluteY="206dp" />

        <EditText
            android:id="@+id/email_text_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/password_text_edit"
            android:layout_alignStart="@+id/password_text_edit"
            android:layout_marginBottom="60dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Email" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/email_text_edit"
            android:layout_alignStart="@+id/email_text_edit"
            android:text="Email" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/password_text_edit"
            android:layout_alignStart="@+id/password_text_edit"
            android:text="Password" />

        <Button
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email_text_edit"
            android:layout_marginTop="70dp"
            android:layout_toEndOf="@+id/textView2"
            android:onClick="onLoginClick"
            android:text="Login" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
